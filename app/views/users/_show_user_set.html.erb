<div class="row">
  <div class="col-md-8">
    <h3><%= t ".lesson_list" %></h3>
  </div>
</div>
<div class="row">
  <table class="table table-striped table-advance table-hover user-set-table">
    <thead>
      <tr>
        <th>
          <%= t ".title" %>
        </th>
        <th>
          <%= t ".description" %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @user_sets.each do |set| %>
        <% unless set.title.nil? %>
          <% unless set.set_type == "3" %>
            <% if (set.set_type == "2" and current_user.following? @user) or
              (set.set_type == "1") %>
              <tr>
                <td><%= set.title %></td>
                <td><%= set.description %></td>
                <td><%= link_to t(".view"), set_lessons_path(user_set_id: set.id),
                      method: :post, class: "btn btn-success" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>