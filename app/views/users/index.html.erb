<div id="page-wrapper" >
  <div id="page-inner">
    <div class="row">
      <div class="col-md-4">
       <br>
        <section class="content-header">
          <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i><%= t ".link_home" %></li>
            <li class="active"><%= t ".link_users" %></li>
          </ol>
        </section>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="page-header">
             <i class="fa fa-globe"></i> <%= t ".title" %>
              <small class="pull-right"><%= t ".date" %>
                <br><%= datetime Time.now %>
              </small>
            </h2>
            <div class="box-tools">
              <div class="input-group" style="width: 300px;">
                <%= form_tag(users_path, :method => "get", id: "search-form") do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Search User" %>
                  <%= submit_tag "Search" %>
                  <% end %>
                <br>
                <div class="greyText fieldsToSearch">
                  <%= link_to t(".reload"), users_path, class: "btn btn-primary"  %>
                </div>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <% if @users.present? %>
              <%= render @users %>
            <% else %>
              <p>There are no users with the name(s) <%= params[:search] %>.</p>
            <% end %>
          </div>
          <br>
          <div class="col-sm-5">
            <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
              <%= t ".total_users" %>
              <br>
              <%= User.count %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>