<div class="row">
  <div class="col-md-8">
    <h3><%= t ".lesson_list" %></h3>
  </div>
  <div class="col-md-2">
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">
      <%= t ".add_new" %>
    </button>
  </div>
  <div class="col-md-2">
    <%= link_to t(".manage"), user_sets_path, class: "btn btn-success" %>
  </div>
</div>
<div class="row">
  <table class="table table-striped table-advance table-hover user-set-table">
    <thead>
      <tr>
        <th>
          <%= t ".title" %>
        </th>
        <th>
          <%= t ".description" %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @user_sets.each do |set| %>
        <% unless set.title.nil? %>
          <tr>
            <td><%= set.title %></td>
            <td><%= set.description %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title"><%= t ".add_lesson" %></h4>
          </div>
          <%= render "user_set_form" %>
        </div>
      </div>
    </div>
  </div>
</div>