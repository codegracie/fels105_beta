<table class="table table-striped table-advance table-hover">
  <thread>
    <tr>
      <th>
        <%= t ".word" %>
      </th>
      <th>
        <%= t ".answer" %>
      </th>
    </tr>
  </thread>
  <tbody>
    <% @user_set_words.each do |word| %>
      <tr>
        <td>
          <%= word.content %>
        </td>
        <td>
          <%= word.answers.first.content %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>