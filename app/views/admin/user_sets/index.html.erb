<div id="page-wrapper" >
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12">
        <br>
          <section class="content-header">
            <ol class="breadcrumb">
              <li><i class="fa fa-dashboard"></i><%= t ".link_home" %></li>
              <li class="active"><%= t ".link_usersets" %></li>
            </ol>
          </section>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="page-header">
              <i class="fa fa-globe"></i> <%= t ".user_sets" %>
              <small class="pull-right"><%= t ".date" %>
                <br><%= datetime Time.now %>
              </small>
            </h2>
            <div class="box-tools">
              <div class="input-group" style="width: 300px;">
                <%= form_tag(admin_user_sets_path, :method => "get", id: "search-form") do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Search User Set" %>
                  <%= submit_tag "Search" %>
                <% end %>
                <br>
                <div class="greyText fieldsToSearch">
                  <%= link_to t(".reload"), admin_user_sets_path, class: "btn btn-primary"  %>
                </div>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
               <br>
                <%= link_to new_admin_user_set_path, class: "btn btn-success btn-xs
                  pull-right btn-panel" do %>
                  <i class="fa fa-plus-circle">
                    <%= t ".add" %>
                  </i>
                <% end %>
              </div>
            </div>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
              <thead>
                <tr>
                  <th><%= t ".title" %></th>
                  <th><%= t ".description" %></th>
                  <th><%= t ".count" %></th>
                  <th><%= t ".created_by" %></th>
                  <th><%= t ".recommended" %></th>
                  <th><%= t ".actions" %></th>
                </tr>
              </thead>
              <tbody>
                <% @user_sets.each do |set| %>
                  <tr>
                    <td><%= set.title %></td>
                    <td><%= set.description %></td>
                    <td><%= set.words.count %></td>
                    <td><%= set.user.full_name %></td>
                    <td><%= set.recommended %></td>
                    <td>
                      <div class="admin-actions">
                        <%= link_to admin_user_set_path(set), class: "button btn btn-success btn-xs" do %>
                          <i class="fa fa-file-text"></i>
                        <% end %>
                        <%= link_to edit_admin_user_set_path(set), class: "button btn btn-primary btn-xs" do %>
                          <i class="fa fa-pencil"></i>
                        <% end %>
                        <%= link_to admin_user_set_path(set), method: :delete,
                          data: {confirm: "You want to delete?"}, class: "button btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                <%= will_paginate @users %>
              <tbody>
            </table>
            <p>
              <%= t(".total") %>
              <br>
              <%= @user_sets.count %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>