<div id="page-wrapper" >
  <div id="page-inner">
    <hr/>
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="page-header">
             <i class="fa fa-globe"></i> <%= t ".title" %>
              <small class="pull-right"><%= t ".date" %><br><%= datetime Time.now %></small>
              <small class="pull-right"><%= t ".totalusers" %><br><%= Word.count %></small>
            </h2>
            <div class="box-tools">
              <div class="input-group" style="width: 300px;">
                <%= form_tag(admin_words_path, :method => "get", id: "search-form") do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Search Word" %>
                  <%= submit_tag "Search" %>
                <% end %>
                <br>
                <div class="greyText fieldsToSearch">
                  <%= link_to t(".reload"), admin_words_path, class: "btn btn-primary"  %>
                </div>
              </div>
            </div>
          </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <div class="row">
              <div class="col-md-12">
                <br>
                <%= link_to new_admin_word_path, class: "btn btn-success btn-xs
                  pull-right btn-panel" do %>
                  <i class="fa fa-plus-circle">
                    <%= t ".add" %>
                  </i>
                <% end %>
              </div>
            </div>
            <thead>
              <tr>
                <th>
                  <i class="fa fa-square fa-lg"><br><br>
                    <%= t ".content" %>
                  </i>
                </th>
                <th>
                  <i class="fa fa-check-square fa-lg"><br><br>
                    <%= t ".content_category" %>
                  </i>
                </th>
                <th>
                  <i class="fa fa-wrench fa-lg"><br><br>
                    <%= t ".content_action" %>
                  </i>
                </th>
              </tr>
            </thead>
            <tbody>
              <% @words.each do |word| %>
                <tr>
                  <td>
                    <%= word.content %>
                  </td>
                  <td>
                    <%= word.category.name %>
                  </td>
                  <td>
                    <div class="admin-actions">
                      <%= link_to admin_word_path(word), class: "button btn btn-success btn-xs" do %>
                        <i class="fa fa-file-text"></i>
                      <% end %>
                      <%= link_to edit_admin_word_path(word), class: "button btn btn-primary btn-xs" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                      <%= link_to admin_word_path(word), method: :delete,
                        data: {confirm: "You want to delete?"},class: "button btn btn-danger btn-xs" do %>
                        <i class="fa fa-trash-o"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="col-sm-5"><div class="dataTables_info" id="example2_info" role="status" aria-live="polite"><%= t ".total_words" %><br><%= Word.count %> </div></div>
            <div class="text-center">
             <%= will_paginate @users %>
            </div>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>