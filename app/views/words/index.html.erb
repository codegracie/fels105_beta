 <div id="page-wrapper" >
  <div id="page-inner">
     <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2 class="page-header"><i class="fa fa-globe"></i> <%= t ".title" %></h2>
            </div>
          <div class="panel-body">
            <div class="panel-heading">
            <h2 class="page-header">
            <%= t ".category" %></h2>
          </div>
        <div class="col-md-5">
          <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name,
              params[:category_id]), include_blank: t("word.all"),
                class: "form-control" %>
        </div
        <br>
        <div class="col-md-6">
          <% ["all_words", "learned", "not_learned"].each_with_index do |option, index| %>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <%= radio_button_tag :option, option,
                  (checked = true if params[:option] == option || params[:option]
                    .nil? && index == 0) %>
                  <%= t "word.#{option}" %>
                </label>
              </div>
            </div>
          <% end %>
        </div>
      <br>
      <div class="row">
        <div class="panel-body">
          <div class="text-center">
            <%= will_paginate @users %>
          </div>
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th>
                  <i class="fa fa-file-word-o"></i><br>
                    <%= t ".content" %>
                  </i>
                </th>
              </tr>
            </thead>
            <tbody>
              <%#= render "words" %>
              <div id="words">
                <%= render "words", words: @words %>
              </div>
            </tbody>
          </table>
            <div class="col-sm-5">
              <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
              <% @user ||= current_user %>
              <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
                <%= t ".total_words_learned" %>
                <br> 
                <span class="badge bg-green">
                  <strong id="following" class="stat">
                    <%= @user.total_words_learned %>
                  </strong>
                </span>
              </div>
              <%= t ".total_words" %>
              <br>
                <span class="badge bg-red">
                  <strong id="following" class="stat">
                    <%= Word.count %> 
                  </strong>
                </span>
              </div>
            </div>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
        
